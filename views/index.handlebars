<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1 class ="title">Real Simple Recipes</h1>
        <p class="subtitle">Scraped</p>
    </div>
</div>

<div class="container-fluid article-container">
    {{#each recipes}} {{#unless this.saved}}
    <div class="card">
        <div class="card-header">
            <h5>
                <a class="article-link" target="_blank" rel="noopener noreferrer" href={{this.link}}>{{this.title}}</a>
                <a class="btn btn-success float-right save-btn btn-sm" data-id="{{this._id}}">Save Recipe</a>
            </h5>
        </div>
    </div>
    {{/unless}} {{/each}}
</div>