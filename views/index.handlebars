{{!-- Header space  --}}

<div class="center-align">
        <div class="col s12 row header center-align valign-wrapper">
        <img src="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fstatic.onecms.io%2Fwp-content%2Fuploads%2Fsites%2F23%2F2020%2F05%2F21%2Fstrawberry-season-2000.jpg" alt="strawberryHeader" class="straws col s8">
        <h3 class="center-align title">Real Simple Recipe Scrape</h3>
    </div>
    <br><br>
    <div class="row center-align">
    <button class="btn" id="scrape">SCRAPE</button>
    </div>
    <h6 class="col s6 center-align">Click 'Scrape' to get the latest recipes</h6>


<br>
<div class="container">
<div class="row center-align">
    {{#each recipes}}
    <div class="card horizontal col s12">
      <div class="card-image col s8">
        <img src="{{imageUrl}}" style="padding-top: 2vh; padding-bottom: 2vh"/>
      </div>
      <div class="card-stacked col s4">
        <div class="card-content valign-wrapper">
          <h5>{{title}}</h5>
        </div>
        <div class="card-action">
          <a href="{{link}}" target = "_blank">Go To Recipe</a>
        </div>
      </div>
    </div>
    {{/each}}
</div>
</div>
</div>

