{{!-- Header space  --}}

<div class="col s12 row z-depth-3 header center-align valign-wrapper">
  <img src="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fstatic.onecms.io%2Fwp-content%2Fuploads%2Fsites%2F23%2F2020%2F05%2F21%2Fstrawberry-season-2000.jpg" alt="strawberryHeader" class="straws col s8">
  <h3 class="center-align title">Real Simple Recipe Scrape</h3>
</div>

<br><br>

<div class="row center-align">
  <a class="btn z-depth-1" type="button" href="/recipes" id="home">Back to Recipes</a>
 <button class="btn z-depth-1" id="saved">SAVED!</button>
  <div class="clearfix"></div>
<h6 class="col s12 propertyOf row"> All recipes property of
    <a href="https://www.realsimple.com/food-recipes/browse-all-recipes" target="_blank" class="center-align rsLink"> 
      Real Simple </a>
</h6>
</div>

<br>

<div class="container">
<div class="row center-align">
    {{#if savedRecipes}}
    {{#each savedRecipes}}
    <div class="card horizontal col s12">
      <div class="card-image col s8">
        <img src="{{imageUrl}}" style="padding-top: 2vh; padding-bottom: 2vh"/>
      </div>
      <div class="card-stacked col s4">
        <div class="card-content valign-wrapper">
          <h5>{{title}}</h5>
        </div>
        <div class="row">
          <a href="{{link}}" target = "_blank">GO TO RECIPE</a>
        </div>
        <div class="card-action center-align">
          <button class="savedActions btn z-depth-1 modal-trigger" data-id={{this._id}} 
          data-target="noteModal{{this._id}}" id="notes">Recipe Notes</button>
        </div>
        <div class="card-bottom center-align">
          <button class="savedActions btn z-depth-1" data-id={{this._id}} 
          id="removeBtn">Unsave this Recipe</button>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
      <div class="panel panel-default">
        <div class="panel-body">
          <h4>You have no saved articles.</h4>
        </div>
      </div>
        {{/if}}
</div>
</div>

<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><h3>{{this.title}}</h3></h5>
            </div>
            <div class="modal-body">
                <div class="card">
                <div class="form-group">
                    <label for="noteTitle" class="sr-only">Enter Note Title</label>
                    <textarea class="form-control" id="noteTitle" rows="3" placeholder="Note Title"></textarea>
                </div>
                <div class="form-group">
                  <label for="noteInput" class="sr-only">Enter Note Here</label>
                  <textarea class="form-control" id="noteInput" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="saveNote">Save Note</button>
            </div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>